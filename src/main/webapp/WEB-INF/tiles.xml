<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
       
<tiles-definitions>

  <definition name="mainpage" template="/WEB-INF/layoutMainpage/template.jsp">
    <put-attribute name="nav" value="/WEB-INF/layoutMainpage/nav.jsp" />
    <put-attribute name="body" value="/WEB-INF/layoutMainpage/body.jsp" />
    <put-attribute name="footer" value="/WEB-INF/layoutMainpage/footer.jsp" />
  </definition>
  
  <definition name="WILDCARD:mainpage/*" extends="mainpage">
    <put-attribute name="body" value="/WEB-INF/views/mainpage/{1}.jsp"></put-attribute>
  </definition>
   
   
   
  <definition name="infopage" template="/WEB-INF/layoutDormInfoPage/template.jsp">
    <put-attribute name="nav" value="/WEB-INF/layoutDormInfoPage/nav.jsp" />
    <put-attribute name="body" value="/WEB-INF/layoutDormInfoPage/body.jsp" />
    <put-attribute name="sidebar" value="/WEB-INF/layoutDormInfoPage/sidebar.jsp" />
    <put-attribute name="footer" value="/WEB-INF/layoutDormInfoPage/footer.jsp" />
  </definition>
  <definition name="WILDCARD:dorminfopage/*" extends="infopage">
    <put-attribute name="body" value="/WEB-INF/views/dorminfopage/{1}.jsp"></put-attribute>
  </definition>
</tiles-definitions>