    <put-attribute name="footer" value="/WEB-INF/layoutDormInfoPage/footer.jsp" />
  </definition>
  <definition name="WILDCARD:dorminfopage/*" extends="infopage">
    <put-attribute name="body" value="/WEB-INF/views/dorminfopage/{1}.jsp"></put-attribute>
  </definition>
  

</tiles-definitions>